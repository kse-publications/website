---
import '@/styles/globals.css'
import { getPublication } from '@/services/search/get-publications'
import PublicationPage from '@/components/publications/publication-section'
import Layout from '@/layouts/Layout.astro'

const { id } = Astro.params as { id: string }

const data = await getPublication(id).catch((error) => {
  console.log(error)
})
---

<Layout title=`KSE docs | ${data.title}`>
  <PublicationPage data={data} transition:persist client:load />
</Layout>
